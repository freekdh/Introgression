{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_CSV",
            "type": "shell",
            "command": "g++ -L/usr/lib/R/lib -fopenmp -O3 -std=c++11 -I /usr/local/include/boost_1_67_0/ -I /usr/local/lib/R/site-library/Rcpp/include/ -I /usr/share/R/include/ -g ./CppFiles/IntrogressionSimulations.cpp ./CppFiles/IntrogressionSimulations.h ./CppFiles/CSV_output.cpp ./CppFiles/random.cpp ./CppFiles/random.h ./CppFiles/utils.cpp ./CppFiles/utils.h -o ./CppFiles/lib/CSVtest /usr/local/lib/libboost_filesystem.a /usr/local/lib/libboost_system.a -llapack -lblas -lgfortran -lm -lquadmath -L/usr/lib/R/lib -lR",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "build_RCPP",
            "type": "shell",
            "command": "g++ -shared -fPIC -L/usr/lib/R/lib -Wl,-z,relro -fopenmp -O3 -std=c++11 -I /usr/local/include/boost_1_67_0/ -I /usr/local/lib/R/site-library/Rcpp/include/ -I /usr/share/R/include/ -I /usr/local/lib/R/site-library/RcppProgress/include/ -g ./CppFiles/IntrogressionSimulations.cpp ./CppFiles/IntrogressionSimulations.h ./CppFiles/Rcpp_output.cpp ./CppFiles/random.cpp ./CppFiles/random.h ./CppFiles/utils.cpp ./CppFiles/utils.h -o ./CppFiles/lib/RCPPtest.dll -llapack -lblas -lgfortran -lm -lquadmath -L/usr/lib/R/lib -lR",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"            
        },
        {
            "label": "build_SHINY",
            "type": "shell",
            "command": "g++ -shared -fPIC -L/usr/lib/R/lib -fopenmp -O3 -std=c++11 -I /usr/local/include/boost_1_67_0/ -I /usr/local/lib/R/site-library/Rcpp/include/ -I /usr/share/R/include/ -I /usr/local/lib/R/site-library/RcppProgress/include/ -g ./CppFiles/IntrogressionSimulations.cpp ./CppFiles/IntrogressionSimulations.h ./CppFiles/Shiny_output.cpp ./CppFiles/Rcpp_output.cpp ./CppFiles/random.cpp ./CppFiles/random.h ./CppFiles/utils.cpp ./CppFiles/utils.h -o ./CppFiles/lib/Shinytest.dll -llapack -lblas -lgfortran -lm -lquadmath -lR",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"            
        },
        {
            "label": "build_Rpackage",
            "type": "shell",
            "command": "R CMD INSTALL pkgIntrogressionv2",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }

    ]
}